---
/**
 * Hero Component
 * 
 * Reusable hero section with background image, gradient overlay,
 * title, subtitle, and CTA buttons.
 */

interface Props {
  title: string;
  subtitle?: string;
  badge?: string;
  badgeIcon?: string;
  backgroundImage?: string;
  primaryCTA?: {
    text: string;
    href: string;
  };
  secondaryCTA?: {
    text: string;
    href: string;
  };
}

const {
  title,
  subtitle,
  badge,
  badgeIcon,
  backgroundImage,
  primaryCTA,
  secondaryCTA,
} = Astro.props;
---

<section class="relative py-20 px-4 overflow-hidden">
  {backgroundImage && (
    <>
      <div class="absolute inset-0 z-0">
        <img 
          src={backgroundImage} 
          alt="" 
          class="w-full h-full object-cover opacity-30"
          loading="eager"
        />
        <div class="absolute inset-0 bg-gradient-to-br from-primary/40 via-background/80 to-accent/40" />
      </div>
    </>
  )}
  
  <div class="container mx-auto text-center max-w-5xl relative z-10">
    {badge && (
      <div class="inline-flex items-center gap-2 bg-secondary px-5 py-2.5 rounded-full mb-8">
        {badgeIcon && (
          <span class="inline-flex items-center justify-center text-primary icon-container" set:html={badgeIcon} />
        )}
        <span class="text-base font-semibold text-secondary-foreground tracking-wide">{badge}</span>
      </div>
    )}
    
    <h1 
      class="text-5xl md:text-6xl lg:text-7xl font-extrabold mb-8 text-foreground leading-tight tracking-tight"
      set:html={title}
    />
    
    {subtitle && (
      <p class="text-xl md:text-2xl text-muted-foreground mb-10 max-w-3xl mx-auto leading-relaxed">
        {subtitle}
      </p>
    )}
    
    {(primaryCTA || secondaryCTA) && (
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        {primaryCTA && (
          <a 
            href={primaryCTA.href}
            class="inline-flex items-center justify-center rounded-lg bg-primary px-10 py-4 text-lg font-semibold text-primary-foreground hover:bg-primary/90 transition-colors shadow-lg hover:shadow-xl"
          >
            {primaryCTA.text}
          </a>
        )}
        
        {secondaryCTA && (
          <a 
            href={secondaryCTA.href}
            class="inline-flex items-center justify-center rounded-lg border-2 border-border bg-background px-10 py-4 text-lg font-semibold hover:bg-accent hover:text-accent-foreground transition-colors"
          >
            {secondaryCTA.text}
          </a>
        )}
      </div>
    )}
  </div>
</section>

