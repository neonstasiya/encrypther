---
/**
 * CTA (Call-to-Action) Component
 * 
 * Attention-grabbing section with gradient background,
 * heading, description, and action buttons.
 */

interface Props {
  title: string;
  description?: string;
  primaryButton?: {
    text: string;
    href: string;
  };
  secondaryButton?: {
    text: string;
    href: string;
  };
  gradient?: boolean;
}

const {
  title,
  description,
  primaryButton,
  secondaryButton,
  gradient = true,
} = Astro.props;

const bgClass = gradient 
  ? 'bg-gradient-to-br from-primary to-accent text-white' 
  : 'bg-muted';
---

<section class={`py-24 px-4 ${bgClass}`}>
  <div class="container mx-auto max-w-5xl text-center">
    <h2 class={`text-4xl md:text-5xl lg:text-6xl font-extrabold mb-6 leading-tight ${gradient ? 'text-primary-foreground' : 'text-foreground'}`}>
      {title}
    </h2>
    
    {description && (
      <p class={`text-xl md:text-2xl mb-10 max-w-3xl mx-auto leading-relaxed ${gradient ? 'text-primary-foreground/90' : 'text-muted-foreground'}`}>
        {description}
      </p>
    )}
    
    {(primaryButton || secondaryButton) && (
      <div class="flex flex-col sm:flex-row gap-5 justify-center">
        {primaryButton && (
          <a 
            href={primaryButton.href}
            class={`inline-flex items-center justify-center rounded-lg px-10 py-4 text-lg font-semibold transition-all shadow-lg hover:shadow-xl ${
              gradient 
                ? 'bg-white text-primary hover:bg-white/90' 
                : 'bg-primary text-primary-foreground hover:bg-primary/90'
            }`}
          >
            {primaryButton.text}
          </a>
        )}
        
        {secondaryButton && (
          <a 
            href={secondaryButton.href}
            class={`inline-flex items-center justify-center rounded-lg border-2 px-10 py-4 text-lg font-semibold transition-all ${
              gradient 
                ? 'border-white bg-white/10 hover:bg-white/20 text-white' 
                : 'border-border bg-background hover:bg-accent hover:text-accent-foreground'
            }`}
          >
            {secondaryButton.text}
          </a>
        )}
      </div>
    )}
  </div>
</section>

