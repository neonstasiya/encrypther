---
/**
 * Contact Page
 * 
 * Contact form, email addresses, and emergency resources.
 */

import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import Card from '../components/Card.astro';
import FeatureGrid from '../components/sections/FeatureGrid.astro';
---

<BaseLayout
  title="Contact Us - EncryptHer"
  description="Get in touch with EncryptHer. We're here to answer questions, provide support, and help with media inquiries."
>
  <!-- Hero Section -->
  <Hero
    title="Get in Touch"
    subtitle="Have questions, feedback, or want to get involved? We'd love to hear from you. Reach out through any of the channels below."
    badge="Contact"
    badgeIcon='<svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>'
    backgroundImage="/images/hero-privacy.jpg"
  />

  <!-- Contact Form Section -->
  <section class="py-20 px-4 bg-background">
    <div class="container mx-auto max-w-2xl">
      <!-- Clean White Container -->
      <div class="bg-card border border-border rounded-lg p-8 md:p-12 shadow-sm">
        <div class="text-center mb-8">
          <h2 class="text-4xl md:text-5xl font-extrabold mb-4 text-foreground">Send Us a Message</h2>
          <p class="text-xl text-muted-foreground">
            Fill out the form below and we'll get back to you within 24-48 hours.
          </p>
        </div>
        
        <form class="space-y-6">
          <div>
            <label for="name" class="block text-base font-semibold mb-2 text-foreground">
              Name *
            </label>
            <input
              type="text"
              id="name"
              name="name"
              placeholder="Your full name"
              required
              class="w-full px-4 py-3 rounded-md border border-border bg-background text-foreground focus:outline-none focus:ring-2 focus:ring-primary transition-shadow"
            />
          </div>

          <div>
            <label for="email" class="block text-base font-semibold mb-2 text-foreground">
              Email *
            </label>
            <input
              type="email"
              id="email"
              name="email"
              placeholder="your.email@example.com"
              required
              class="w-full px-4 py-3 rounded-md border border-border bg-background text-foreground focus:outline-none focus:ring-2 focus:ring-primary transition-shadow"
            />
          </div>

          <div>
            <label for="subject" class="block text-base font-semibold mb-2 text-foreground">
              Subject *
            </label>
            <select
              id="subject"
              name="subject"
              required
              class="w-full px-4 py-3 rounded-md border border-border bg-background text-foreground focus:outline-none focus:ring-2 focus:ring-primary transition-shadow"
            >
              <option value="">Select a subject</option>
              <option value="general">General Inquiry</option>
              <option value="support">Support Request</option>
              <option value="partnership">Partnership Opportunity</option>
              <option value="media">Media Inquiry</option>
              <option value="other">Other</option>
            </select>
          </div>

          <div>
            <label for="message" class="block text-base font-semibold mb-2 text-foreground">
              Message *
            </label>
            <textarea
              id="message"
              name="message"
              placeholder="Tell us how we can help you..."
              rows="6"
              required
              class="w-full px-4 py-3 rounded-md border border-border bg-background text-foreground focus:outline-none focus:ring-2 focus:ring-primary transition-shadow resize-none"
            ></textarea>
          </div>

          <button
            type="submit"
            class="w-full px-6 py-3 bg-gradient-to-r from-primary to-accent text-primary-foreground font-semibold rounded-lg hover:opacity-90 transition-all"
          >
            Send Message
          </button>
        </form>

        <!-- Contact Info Footer -->
        <div class="mt-8 pt-8 border-t border-border text-center">
          <p class="text-sm text-muted-foreground mb-3">
            You can also reach us at:
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center text-sm">
            <a href="mailto:info@encrypther.org" class="text-primary hover:underline">
              info@encrypther.org
            </a>
            <span class="hidden sm:inline text-muted-foreground">•</span>
            <a href="mailto:support@encrypther.org" class="text-primary hover:underline">
              support@encrypther.org
            </a>
            <span class="hidden sm:inline text-muted-foreground">•</span>
            <a href="mailto:media@encrypther.org" class="text-primary hover:underline">
              media@encrypther.org
            </a>
          </div>
        </div>
      </div>

      <!-- Emergency Resources Notice -->
      <div class="mt-12 bg-destructive/5 border border-destructive/20 rounded-lg p-6 max-w-2xl mx-auto">
        <div class="flex items-start gap-4 mb-4">
          <div class="h-12 w-12 rounded-lg bg-destructive/10 flex items-center justify-center flex-shrink-0">
            <svg class="h-6 w-6 text-destructive" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
          </div>
          <div>
            <h3 class="text-xl font-semibold mb-2 text-foreground">Emergency Resources</h3>
            <p class="text-sm text-muted-foreground mb-3">If you're in immediate danger, contact emergency services</p>
            <div class="space-y-1 text-sm text-muted-foreground">
              <p class="font-semibold text-foreground">Emergency: 911</p>
              <p>National Domestic Violence Hotline: 1-800-799-7233</p>
              <p>National Sexual Assault Hotline: 1-800-656-4673</p>
              <p>Crisis Text Line: Text HOME to 741741</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

