---
/**
 * Newsletter Page
 * 
 * Newsletter signup with benefits and privacy notice.
 */

import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import Card from '../components/Card.astro';
import CTA from '../components/CTA.astro';
import FeatureGrid from '../components/sections/FeatureGrid.astro';
---

<BaseLayout
  title="Newsletter - Stay Informed & Empowered"
  description="Subscribe to the EncryptHer newsletter for privacy tips, safety guides, and updates on digital rights advocacy."
>
  <!-- Hero Section -->
  <Hero
    title="Stay Informed & <span class='text-primary'>Empowered</span>"
    subtitle="Get privacy tips, safety guides, and advocacy updates delivered directly to your inbox. Join thousands of women taking control of their digital safety."
    badge="Newsletter"
    badgeIcon='<svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>'
    backgroundImage="/images/hero-privacy.jpg"
  />

  <!-- Newsletter Benefits Section -->
  <section class="py-20 px-4 bg-background">
    <div class="container mx-auto max-w-6xl">
      <div class="text-center mb-12">
        <h2 class="text-4xl md:text-5xl font-extrabold mb-4 text-foreground">What You'll Receive</h2>
        <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
          Our newsletter delivers actionable privacy tips and safety insights directly to your inbox
        </p>
      </div>

      <FeatureGrid columns={3}>
        <Card
          title="Weekly Privacy Tips"
          description="Practical advice on protecting your digital footprint, securing your accounts, and maintaining online privacy"
          iconBg="primary"
          icon='<svg class="w-full h-full" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" /></svg>'
        />

        <Card
          title="Safety Guides & Resources"
          description="Downloadable guides, checklists, and templates for online privacy, travel safety, and personal protection"
          iconBg="accent"
          icon='<svg class="w-full h-full" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" /></svg>'
        />

        <Card
          title="Advocacy Updates"
          description="Latest news on privacy legislation, digital rights campaigns, and how you can take action"
          iconBg="primary"
          icon='<svg class="w-full h-full" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z" /></svg>'
        />

        <Card
          title="Course Announcements"
          description="Early access to new courses, special discounts, and exclusive content for newsletter subscribers"
          iconBg="accent"
          icon='<svg class="w-full h-full" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" /></svg>'
        />

        <Card
          title="Security Alerts"
          description="Timely notifications about data breaches, privacy threats, and important security updates"
          iconBg="primary"
          icon='<svg class="w-full h-full" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" /></svg>'
        />

        <Card
          title="Community Stories"
          description="Inspiring stories from women who have taken control of their digital safety and privacy"
          iconBg="accent"
          icon='<svg class="w-full h-full" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" /></svg>'
        />
      </FeatureGrid>
    </div>
  </section>

  <!-- Newsletter Signup Form Section -->
  <section class="py-20 px-4 bg-muted/50">
    <div class="container mx-auto max-w-2xl">
      <div class="bg-card border border-border rounded-lg p-8 md:p-12">
        <div class="text-center mb-8">
          <h2 class="text-4xl md:text-5xl font-extrabold mb-4 text-foreground">Subscribe to Our Newsletter</h2>
          <p class="text-lg text-muted-foreground">
            Join our community and receive privacy tips, safety guides, and advocacy updates
          </p>
        </div>

        <form class="space-y-6">
          <div>
            <label for="name" class="block text-base font-semibold mb-2 text-foreground">
              Name *
            </label>
            <input
              type="text"
              id="name"
              name="name"
              placeholder="Your full name"
              required
              class="w-full px-4 py-3 rounded-md border border-border bg-background text-foreground focus:outline-none focus:ring-2 focus:ring-primary"
            />
          </div>

          <div>
            <label for="email" class="block text-base font-semibold mb-2 text-foreground">
              Email Address *
            </label>
            <input
              type="email"
              id="email"
              name="email"
              placeholder="your.email@example.com"
              required
              class="w-full px-4 py-3 rounded-md border border-border bg-background text-foreground focus:outline-none focus:ring-2 focus:ring-primary"
            />
          </div>

          <div>
            <label class="flex items-start gap-3">
              <input
                type="checkbox"
                required
                class="mt-1 h-4 w-4 rounded border-border text-primary focus:ring-primary"
              />
              <span class="text-sm text-muted-foreground">
                I agree to receive newsletters and updates from EncryptHer. You can unsubscribe at any time. *
              </span>
            </label>
          </div>

          <button
            type="submit"
            class="w-full px-6 py-3 bg-gradient-to-r from-primary to-accent text-primary-foreground font-semibold rounded-lg hover:opacity-90 transition-all"
          >
            Subscribe Now
          </button>
        </form>

        <div class="mt-8 p-4 bg-muted/50 rounded-lg">
          <h3 class="text-sm font-semibold mb-2 text-foreground">Privacy Promise</h3>
          <p class="text-xs text-muted-foreground">
            We respect your privacy and will never share your email address with third parties. 
            You can unsubscribe at any time by clicking the link at the bottom of any email. 
            We send newsletters weekly and occasional important updates.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <CTA
    title="Ready to Take Control of Your Privacy?"
    description="Subscribe to our newsletter and start receiving actionable privacy tips and safety guides."
    primaryButton={{
      text: "Subscribe Now",
      href: "#"
    }}
    secondaryButton={{
      text: "Explore Our Courses",
      href: "/#courses"
    }}
  />
</BaseLayout>

